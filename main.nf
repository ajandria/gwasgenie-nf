//
// WORKFLOW: Run main analysis pipeline depending on type of input
//
workflow GWASGENIE {

    take:
    gwas_sheet // channel: samplesheet read in from --gwas_sheet

    main:

    //
    // WORKFLOW: Run pipeline
    //
    EXTRACT_PHENOS (
        gwas_sheet
    )

}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
